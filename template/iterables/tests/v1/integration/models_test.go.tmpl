func Test{{ camelcase .Name }}s(test *testing.T) {
	test.Parallel()

	test.Run("Creating", func(T *testing.T) {
		T.Run("should be createable", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// CreateHandler {{ lower .Name }}
			expected := &models.{{ pascal .Name }}{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: {{ typeExample $field.Type $field.Pointer }},
					{{ end }}
				}
			premade, err := todoClient.Create{{ camelcase .Name }}(
				ctx,
				&models.{{ pascal .Name }}CreationInput{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: expected.{{ pascal $field.Name }},
					{{ end }}
				})
			checkValueAndError(t, premade, err)

			// Assert {{ lower .Name }} equality
			check{{ camelcase .Name }}Equality(t, expected, premade)

			// Clean up
			err = todoClient.Archive{{ camelcase .Name }}(ctx, premade.ID)
			assert.NoError(t, err)

			actual, err := todoClient.Get{{ camelcase .Name }}(ctx, premade.ID)
			checkValueAndError(t, actual, err)
			check{{ camelcase .Name }}Equality(t, expected, actual)
			assert.NotZero(t, actual.ArchivedOn)
		})
	})

	test.Run("Listing", func(T *testing.T) {
		T.Run("should be able to be read in a list", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// CreateHandler {{ lower .Name }}s
			var expected []*models.{{ camelcase .Name }}
			for i := 0; i < 5; i++ {
				expected = append(expected, buildDummy{{ camelcase .Name }}(t))
			}

			// Assert {{ lower .Name }} list equality
			actual, err := todoClient.Get{{ camelcase .Name }}s(ctx, nil)
			checkValueAndError(t, actual, err)
			assert.True(
				t,
				len(expected) <= len(actual.{{ camelcase .Name }}s),
				"expected %d to be <= %d",
				len(expected),
				len(actual.{{ camelcase .Name }}s),
			)

			// Clean up
			for _, {{ lower .Name }} := range actual.{{ camelcase .Name }}s {
				err = todoClient.Archive{{ camelcase .Name }}(ctx, {{ lower .Name }}.ID)
				assert.NoError(t, err)
			}
		})
	})

	test.Run("Reading", func(T *testing.T) {
		T.Run("it should return an error when trying to read something that doesn't exist", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// Fetch {{ lower .Name }}
			_, err := todoClient.Get{{ camelcase .Name }}(ctx, nonexistentID)
			assert.Error(t, err)
		})

		T.Run("it should be readable", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// CreateHandler {{ lower .Name }}
			expected := &models.{{ pascal .Name }}{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: {{ typeExample $field.Type $field.Pointer }},
					{{ end }}
				}
			premade, err := todoClient.Create{{ camelcase .Name }}(
				ctx,
				&models.{{ pascal .Name }}CreationInput{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: expected.{{ pascal $field.Name }},
					{{ end }}
				})
			checkValueAndError(t, premade, err)

			// Fetch {{ lower .Name }}
			actual, err := todoClient.Get{{ camelcase .Name }}(ctx, premade.ID)
			checkValueAndError(t, actual, err)

			// Assert {{ lower .Name }} equality
			check{{ camelcase .Name }}Equality(t, expected, actual)

			// Clean up
			err = todoClient.Archive{{ camelcase .Name }}(ctx, actual.ID)
			assert.NoError(t, err)
		})
	})

	test.Run("Updating", func(T *testing.T) {
		T.Run("it should return an error when trying to update something that doesn't exist", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			err := todoClient.Update{{ camelcase .Name }}(ctx, &models.{{ camelcase .Name }}{ID: nonexistentID})
			assert.Error(t, err)

		})

		T.Run("it should be updatable", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// CreateHandler {{ lower .Name }}
			expected := &models.{{ pascal .Name }}{
			{{ range $i, $field := .Fields }}
			{{ pascal $field.Name }}: {{ typeExample $field.Type $field.Pointer }},
			{{ end }}
		}
			premade, err := todoClient.Create{{ camelcase .Name }}(
				tctx,
				&models.{{ pascal .Name }}CreationInput{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: {{ typeExample $field.Type $field.Pointer }},
					{{ end }}
				},
			)
			checkValueAndError(t, premade, err)

			// Change {{ lower .Name }}
			// CHANGEME
			err = todoClient.Update{{ camelcase .Name }}(ctx, premade)
			assert.NoError(t, err)

			// Fetch {{ lower .Name }}
			actual, err := todoClient.Get{{ camelcase .Name }}(ctx, premade.ID)
			checkValueAndError(t, actual, err)

			// Assert {{ lower .Name }} equality
			check{{ camelcase .Name }}Equality(t, expected, actual)
			assert.NotNil(t, actual.UpdatedOn)

			// Clean up
			err = todoClient.Archive{{ camelcase .Name }}(ctx, actual.ID)
			assert.NoError(t, err)
		})
	})

	test.Run("Deleting", func(T *testing.T) {
		T.Run("should be able to be deleted", func(t *testing.T) {
			tctx := context.Background()
			ctx, span := trace.StartSpan(tctx, t.Name())
			defer span.End()

			// CreateHandler {{ lower .Name }}
			expected := &models.{{ pascal .Name }}{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: {{ typeExample $field.Type $field.Pointer }},
					{{ end }}
				}
			premade, err := todoClient.Create{{ camelcase .Name }}(ctx,
				&models.{{ pascal .Name }}CreationInput{
					{{ range $i, $field := .Fields }}
					{{ pascal $field.Name }}: expected.{{ pascal $field.Name }},
					{{ end }}
				})
			checkValueAndError(t, premade, err)

			// Clean up
			err = todoClient.Archive{{ camelcase .Name }}(ctx, premade.ID)
			assert.NoError(t, err)
		})
	})
}
