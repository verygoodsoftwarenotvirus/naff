// scan{{ camelcase .Name }}s takes a logger and some database rows and turns them into a slice of {{ lower .Name }}s
func scan{{ camelcase .Name }}s(logger logging.Logger, rows *sql.Rows) ([]models.{{ camelcase .Name }}, error) {
	var list []models.{{ camelcase .Name }}

	for rows.Next() {
		x, err := scan{{ camelcase .Name }}(rows)
		if err != nil {
			return nil, err
		}
		list = append(list, *x)
	}

	if err := rows.Err(); err != nil {
		return nil, err
	}

	if closeErr := rows.Close(); closeErr != nil {
		logger.Error(closeErr, "closing database rows")
	}

	return list, nil
}

