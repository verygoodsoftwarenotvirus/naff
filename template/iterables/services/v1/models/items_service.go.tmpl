package {{ lower .Name }}s

import (
	"context"
	"net/http"

	"{{ .OutputRepository }}/internal/encoding/v1"
	"{{ .OutputRepository }}/internal/logging/v1"
	"{{ .OutputRepository }}/internal/metrics/v1"
	"{{ .OutputRepository }}/models/v1"

	"gitlab.com/verygoodsoftwarenotvirus/newsman"

	"github.com/pkg/errors"
)

const (
	// CreateMiddlewareCtxKey is a string alias we can use for referring to {{ lower .Name }} input data in contexts
	CreateMiddlewareCtxKey models.ContextKey = "{{ lower .Name }}_create_input"
	// UpdateMiddlewareCtxKey is a string alias we can use for referring to {{ lower .Name }} update data in contexts
	UpdateMiddlewareCtxKey models.ContextKey = "{{ lower .Name }}_update_input"

	counterName        metrics.CounterName = "{{ lower .Name }}s"
	counterDescription                     = "the number of {{ lower .Name }}s managed by the {{ lower .Name }}s service"
	topicName          string              = "{{ lower .Name }}s"
	serviceName        string              = "{{ lower .Name }}s_service"
)

var (
	_ models.{{ camelcase .Name }}DataServer = (*Service)(nil)
)

type (
	// Service handles to-do list {{ lower .Name }}s
	Service struct {
		logger         logging.Logger
		{{ lower .Name }}Counter    metrics.UnitCounter
		{{ lower .Name }}Database   models.{{ camelcase .Name }}DataManager
		userIDFetcher  UserIDFetcher
		{{ lower .Name }}IDFetcher  {{ camelcase .Name }}IDFetcher
		encoderDecoder encoding.EncoderDecoder
		reporter       newsman.Reporter
	}

	// UserIDFetcher is a function that fetches user IDs
	UserIDFetcher func(*http.Request) uint64

	// {{ camelcase .Name }}IDFetcher is a function that fetches {{ lower .Name }} IDs
	{{ camelcase .Name }}IDFetcher func(*http.Request) uint64
)

// Provide{{ camelcase .Name }}sService builds a new {{ camelcase .Name }}sService
func Provide{{ camelcase .Name }}sService(
	ctx context.Context,
	logger logging.Logger,
	db models.{{ camelcase .Name }}DataManager,
	userIDFetcher UserIDFetcher,
	{{ lower .Name }}IDFetcher {{ camelcase .Name }}IDFetcher,
	encoder encoding.EncoderDecoder,
	{{ lower .Name }}CounterProvider metrics.UnitCounterProvider,
	reporter newsman.Reporter,
) (*Service, error) {
	{{ lower .Name }}Counter, err := {{ lower .Name }}CounterProvider(counterName, counterDescription)
	if err != nil {
		return nil, errors.Wrap(err, "error initializing counter")
	}

	svc := &Service{
		logger:         logger.WithName(serviceName),
		{{ lower .Name }}Database:   db,
		encoderDecoder: encoder,
		{{ lower .Name }}Counter:    {{ lower .Name }}Counter,
		userIDFetcher:  userIDFetcher,
		{{ lower .Name }}IDFetcher:  {{ lower .Name }}IDFetcher,
		reporter:       reporter,
	}

	{{ lower .Name }}Count, err := svc.{{ lower .Name }}Database.GetAll{{ camelcase .Name }}sCount(ctx)
	if err != nil {
		return nil, errors.Wrap(err, "setting current {{ lower .Name }} count")
	}
	svc.{{ lower .Name }}Counter.IncrementBy(ctx, {{ lower .Name }}Count)

	return svc, nil
}
