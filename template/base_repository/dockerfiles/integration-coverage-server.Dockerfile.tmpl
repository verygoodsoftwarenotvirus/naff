# build stage
FROM golang:stretch AS build-stage

WORKDIR /go/src/{{ .OutputRepository }}

RUN apt-get update -y && apt-get install -y make git gcc musl-dev

ADD . .

RUN go test -o /todo -c -coverpkg \
    {{ .OutputRepository }}/internal/...,{{ .OutputRepository }}/database/v1/...,{{ .OutputRepository }}/services/v1/...,{{ .OutputRepository }}/cmd/server/v1/ \
    {{ .OutputRepository }}/cmd/server/v1

# frontend-build-stage
FROM node:latest AS frontend-build-stage

WORKDIR /app

ADD frontend/v1 .

RUN npm install && npm run build

# final stage
FROM debian:stable

COPY config_files config_files
COPY --from=build-stage /todo /todo

ENV CONFIGURATION_FILEPATH=config_files/coverage.toml

EXPOSE 80

ENTRYPOINT ["/todo", "-test.coverprofile=/home/integration-coverage.out"]

